@model IEnumerable<FIT5032_VMedProject.Models.Appointment>

@{
    ViewBag.Title = "Appointment List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    @if (User.IsInRole("Administrator"))
    {
        <text>All Appointments</text>
    }
    else
    {
        <text>My Appointments</text>
    }
</h2>
<br />
<p>
    <a href="@Url.Action("Create")" class="add-button">
        <i class="fa fa-plus-circle" aria-hidden="true"></i> Add Appointment
    </a>
</p>
<table id="appointmentTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Appointment Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                Doctor
            </th>
            <th>
                Service
            </th>
            <th>
                Patient Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.AppointmentDate.ToString("dd-MM-yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.FirstName)
                    @Html.DisplayFor(modelItem => item.Doctor.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service.ServiceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                </td>
                <td style="text-align: center; vertical-align: middle;">
                    <a href="@Url.Action("Edit", new { id = item.AppointmentID })" style="color: white; text-decoration: none;">
                        <i class="bi bi-pencil-fill" aria-hidden="true" style="color: darkorange;"></i>
                    </a> |
                    <a href="@Url.Action("Details", new { id = item.AppointmentID })" style="color: white; text-decoration: none;">
                        <i class="fa fa-book" aria-hidden="true" style="color: darkorange;"></i>
                    </a> |
                    <a href="@Url.Action("Delete", new { id = item.AppointmentID })" style="color: white; text-decoration: none;">
                        <i class="bi bi-trash-fill" aria-hidden="true" style="color: darkorange;"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

@section Scripts {

    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
}

